extends base

block content 
  main.main
    .card-container

      each tour in tours
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
                img.card__picture-img(src=`/img/tours/${tour.imageCover}`
                  alt=`${tour.name}`)
            h3.heading-tertirary
              span=tour.name

          .card__details
            //- h4.card__sub-heading #{tour.difficulty} #{tour.duration}-day tours 
            h4.card__sub-heading=`${tour.difficulty} ${tour.duration}-day tours`
            p.card__text= tour.summary
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-map-pin')
              span=tour.startLocation.description
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
              span=tour.startDates[0].toLocaleDateString('fr-FR',{month:'long', year:'numeric' })
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-flag')
              //- span #{tour.locations.lenght} stop
              span=`${tour.locations.length} ${tour.locations.length < 2?'stop':'stops'}`
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-user')
              //- span #{tour.maxGroupSize} people
              span=`${tour.maxGroupSize} ${tour.maxGroupSize < 2?'people':'peoples'}`
            .card__data

          .card__footer
            p
              span.card__footer-value $#{tour.price}
              | 
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value=tour.ratingsAverage
              | 
              span.card__footer-text ratings (#{tour.ratingsQuantity})
            a(href=`/tours/${tour.slug}`).btn.btn--green.btn--small Details
